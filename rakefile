require "rake/testtask"
require "./lib/snake"

Rake::TestTask.new(:test) do |t|
  t.libs << "test"
  t.test_files = FileList["test/**/*_test.rb"]
end

namespace :test do
  task :coverage do
    require 'simplecov'
    SimpleCov.command_name 'Unit Tests'
    SimpleCov.start
    Rake::Task["spec"].execute
  end
end

desc "Run the game"
task :run do |t|
  game = Snake::Game.new
  game.run
end
