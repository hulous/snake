require "rspec/core/rake_task"
require "./lib/snake"


RSpec::Core::RakeTask.new

namespace :app do
  desc "Run the game"
  task :run do |t|
    game = Snake::Game.new
    game.run
  end

  desc "Run spec suite"
  RSpec::Core::RakeTask.new(:spec) do |spec|
    spec.pattern = "spec/**/*_spec.rb"
  end

  namespace :spec do
    task :coverage do
      system("COVERAGE=true rake app:spec")
    end
  end
end
