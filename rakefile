require "rspec/core/rake_task"
require "./lib/snake"


RSpec::Core::RakeTask.new

namespace :app do
  desc "Run the game"
  task :run do |t|
    game = Snake::Game.new
    game.run
  end

  desc "Run spec suite"
  RSpec::Core::RakeTask.new(:spec) do |spec|
    spec.pattern = "spec/**/*_spec.rb"
  end

  namespace :spec do
    desc "Run spec suite with coverage"
    task :coverage do
      system("COVERAGE=true bundle exec rake app:spec")
    end
  end

  namespace :linter do
    desc "Run rubocop and reek"
    task :all do
      system("bundle exec rake app:linter:rubocop")
      system("bundle exec rake app:linter:reek")
    end

    desc "Run rubocop"
    task :rubocop do
      system("bundle exec rubocop .")
    end

    desc "Run reek"
    task :reek do
      system("bundle exec reek .")
    end
  end
end
